{
    "includes": [
        "src"
    ],
    "exclude": [
      "tests"
    ],
    "report": {
        "html": "build/phpmetrics/",
        "json": "build/logs/phpmetrics.json",
        "violations": "build/logs/phpmetrics-violations.xml"
    },
    "plugins": {
        "junit": {
            "file": "build/logs/junit.xml"
        }
    },
    "extensions": [ "php", "php8" ]
}